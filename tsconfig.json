{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "newLine": "lf",
    "outDir": "dist",
    "removeComments": true,
    "rootDir": "src",
    "strict": true,
    "target": "es2018",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
  ]
}
